@model WebApp.ViewModel.Usuario.UsuarioViewModel

@{
    string strpickadate = Model.EditMode == 1 ? "pickadate" : "";
}

<div class="row">

    <div class="col-lg-6 col-md-6 col-sm-6">
        <div class="form-group">
            <label asp-for="UsuarioNombre" class="control-label"></label>
            <input type="text" asp-for="UsuarioNombre" class="form-control"></input>
            <span asp-validation-for="UsuarioNombre" class="text-danger"></span>
        </div>
    </div>

    <div class="col-lg-6 col-md-6 col-sm-6">
        <div class="form-group">
            <label asp-for="UsuarioApellido" class="control-label"></label>
            <input type="text" asp-for="UsuarioApellido" class="form-control"></input>
            <span asp-validation-for="UsuarioApellido" class="text-danger"></span>
        </div>
    </div>

    <div class="col-lg-6 col-md-6 col-sm-6">
        <div class="form-group">
            <label asp-for="UsuarioEdad" class="control-label"></label>
            <input type="number" asp-for="UsuarioEdad" class="form-control"></input>
            <span asp-validation-for="UsuarioEdad" class="text-danger"></span>
        </div>
    </div>

    <div class="col-lg-6 col-md-6 col-sm-6">
        <div class="form-group">
            <label asp-for="CargoId" class="control-label"></label>
            <select asp-for="CargoId" class="form-control" asp-items="ViewBag.ListaCargos"></select>
            <span asp-validation-for="CargoId" class="text-danger"></span>
        </div>
    </div>

    <div class="col-lg-6 col-md-6 col-sm-6">
        <div class="form-group">
            <label asp-for="PerfilId" class="control-label"></label>
            <select asp-for="PerfilId" class="form-control" asp-items="ViewBag.ListaPerfiles"></select>
            <span asp-validation-for="PerfilId" class="text-danger"></span>
        </div>
    </div>

    

    <div class="col-lg-6 col-md-6 col-sm-6">
        <div class="form-group">
            <label asp-for="UsuarioFechaNacimiento" class="control-label"></label>
            @if (Model.UsuarioFechaNacimiento != null)
            {
                <input type="text" value=@Model.UsuarioFechaNacimiento.Value.ToString("dd/MM/yyyy") asp-for="UsuarioFechaNacimiento" class="@strpickadate form-control startDate" autocomplete="off" />
            }
            else
            {
                <input type="text" asp-for="UsuarioFechaNacimiento" class="@strpickadate form-control startDate" autocomplete="off" />
            }
            <span asp-validation-for="UsuarioFechaNacimiento" class="text-danger"></span>
        </div>
    </div>

    <div class="col-lg-6 col-md-6 col-sm-6">
        <div class="form-group">
            <label asp-for="UsuarioEstado" class="control-label"></label>
            <select asp-for="UsuarioEstado" class="form-control" asp-items="ViewBag.ListaEstados"></select>
            <span asp-validation-for="UsuarioEstado" class="text-danger"></span>
        </div>
    </div>

    <div class="col-lg-6 col-md-6 col-sm-6">
        <div class="form-group">
            <label asp-for="UsuarioDireccion" class="control-label"></label>
            <textarea style="resize: none;" type="text" asp-for="UsuarioDireccion" class="form-control"></textarea>
            <span asp-validation-for="UsuarioDireccion" class="text-danger"></span>
        </div>
    </div>

</div>
