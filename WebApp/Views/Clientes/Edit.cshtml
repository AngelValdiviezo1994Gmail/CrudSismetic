@model WebApp.ViewModel.ClienteViewModel
@{
    ViewData["Title"] = "SEN - Cliente edición";
    ViewData["Pagina"] = "CRUD Cliente";
    ViewData["Accion"] = "Editar Cliente";
}

@section BodyHeader{
    <h5>Editar</h5>
}

<div class="card-body">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ClientId" />

        <partial name="_ClientePartial" />
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="btn-page">
                    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                    <a asp-action="Index" class="btn btn-light">Cancelar</a>
                </div>
            </div>
        </div>
    </form>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    }
